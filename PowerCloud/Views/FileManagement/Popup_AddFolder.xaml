<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               x:Class="PowerCloud.Views.FileManagement.Popup_AddFolder"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

    <VerticalStackLayout Style="{StaticResource PopupBackgroudStyle}">
        <!--title-->
        <Label Style="{StaticResource PopupTitleTextStyle}"
                   Grid.Column="1"
                   Text="新增資料夾" />
              
        <!--inner-->
        <Entry Style="{StaticResource PopupEntryStyle}"
               x:Name="EntryFolderName"
               Placeholder="Enter text" />
        
        <!--btn-row-->
        <HorizontalStackLayout HorizontalOptions="End" Padding="0,30,0,15">
            <Button Text="取消" Clicked="Btn_Clicked_ClosePopup" Style="{StaticResource Btn_Bg_White_DarkGary}"/>
            <Button Text="建立" Clicked="Btn_Clicked_AddFolder" Style="{StaticResource Btn_Bg_BlueGreen}" Margin="15,0,0,0"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
    

</toolkit:Popup>
