<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PowerCloud.Views.FileManagement.View"
             xmlns:Models="clr-namespace:PowerCloud.Models"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Shell.BackgroundColor="Black"
             BackgroundColor="Black"
             Title="view page">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="0">
            <Image Aspect="AspectFill" 
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="Center" />
        </StackLayout>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="50" />
            </Grid.ColumnDefinitions>
            <StackLayout Margin="5,0,0,0" 
                         Padding="3"
                         Grid.Column="0">
                <Label Text="{x:Static Models:icomoonFontIcon.Icon44}" 
                       Style="{StaticResource LabelIconStyle}"
                       FontSize="26" 
                       TextColor="{StaticResource Color_White}"/>                
            </StackLayout>
            <StackLayout Margin="0,0,5,0" 
                         Padding="3"
                         Grid.Column="2">
                <StackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Btn_Popup_FileManViewDelete"/>
                </StackLayout.GestureRecognizers>
                <Label Text="{x:Static Models:icomoonFontIcon.Icon46}" 
                   Grid.Column="2"
                   Style="{StaticResource LabelIconStyle}"
                   FontSize="26" 
                   Margin="0,0,5,0" 
                   Padding="3"
                   TextColor="{StaticResource Color_White}"/>
            </StackLayout>
        </Grid>

    </Grid>

</ContentPage>